<h1>Users</h1>

<%= link_to "New user", new_user_path -%>

<div class="users">
    <% @users.each do |user| -%>
        <div class="user">
            <div style="display: flex; margin-right: 2px;">
                <% if user.image.attached? %>
                <img src="<%= url_for(user.image) %>">
                <% end %>
            <h3><%= link_to user.username, user-%></h3>
            </div>
            <p><%= user.email-%></p>
        </div>
    <% end -%>
</div>
</div>